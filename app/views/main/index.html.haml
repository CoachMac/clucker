%title CLUCKER
%br
%br

%h1#Name CLUCKER 
%br	
%br
%br
%br
%h2#Slogan ...dropping clucks out of thin air! 


%button{:id => "btnStart"} Let's Start




%br

.content.homeContent
	%p
		Clucker allows you to initiate a trending topic by posting a peep (your thoughts). 
		%br
		%br

		It also promotes conversation by allowing you to comment on other's trending topics (peep).
		%br
		
		
	%ul.content
		%li Share what's on your mind
		%br
		%li Read what's on their minds
		%br
		%li Converse about trending topics

#dialogLogin.dialog
	%input#txtLoginEmail(type="text" placeholder="email") 
	%input#txtLoginPassword(type="text" placeholder="password")
	%button#btnLogin Go!
	%button#btnLoginCancel Cancel

#dialogSignup.dialog
	%ul.contactform
		%li
			%label{:for => "firstname"} First Name:
			%input{:type => "text", :name => "firstname", :class => "text", :id => "firstname"}
			#firstnamemessage
				%p.formmessage Please enter your first name.
		%li
			%label{:for => "name"} Last Name:
			%input{:type => "text", :name => "lastname", :class => "text", :id => "lastname"}
			#lastnamemessage
				%p.formmessage Please enter your last name.
		%li
			%label{:for => "mail"} Email:
			%input{:type => "text", :name => "mail", :class => "text", :id => "email"}
			#emailmessage 
				%p.formmessage Email is not valid.

		%li
			%label{:for => "mail"} Password:
			%input{:type => "text", :name => "password", :class => "text", :id => "password"}
			#passwordmessage
				%p.formmessage Password is not valid.

		%li
			%label{:for => "mail"} Confirm Password:
			%input{:type => "text", :name => "confirmpassword", :class => "text", :id => "confirmpassword"}
			#confirmpasswordmessage 
				%p.formmessage Password does not match.

		.buttonHolder
			%button#submitbtn Submit
			%button#cancelbtn Cancel


	
	



             

